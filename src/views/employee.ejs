  <!-- Register model employe -->
  <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="registerEmploye">
                <div class="mb-3">
                    <label for="inputName" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" id="inputName">
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1"name="password" class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                    <label for="inputDepartment" class="form-label">Department</label>
                    <input type="text" class="form-control" name="department" id="exampleInputDepartment">
                </div>
                <div class="mb-3">
                    <label for="inputManagerId"class="form-label">ManagerId</label>
                    <input type="text" class="form-control" name="managerId" id="inputManagerId">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Login model-->

  <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="loginEmployee">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>


  <!-- Time Sheet -->

  <br>

  <section class ="container p-5 mt-2 bg-light">

    <h4>Time Sheet Update</h4>

    <form class="row g-3" id="timeSheet">
      <!-- Date -->
      <div class="col-md-6"> 
        <label for="inputDate" class="form-label">Date</label>
      <input type="date" id="start" name="date" class="form-control"
      value="2018-07-22">
      </div>
      <!--Project  -->
      <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Project</label>
        <input type="text" name="project" class="form-control" id="inputPassword4">
      </div>
      <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Remark</label>
        <input type="text" name="remark" class="form-control" id="inputPassword4">
      </div>
      <!--Description -->
      <div class="col-12">
        <label for="inputAddress" class="form-label">Description</label>
        <textarea id="w3review" name="description" rows="1" class="form-control" cols="50">
          </textarea>
      </div>
      <!-- Time  -->
      <div class="col-md-6"> 
        <input type="time" id="appt" name="time"
          min="09:00" max="18:00" required>
          <small>Office hours are 9am to 6pm</small>
        </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Sumbit</button>
      </div>
    </form>

  </section>
  <br>
  <!-- Time Sheet -->
  <section class="container">
    <div id="timeSheetInfo"></div>
  </section>

